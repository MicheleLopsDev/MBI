<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>
    <!-- Tema base - ora fa riferimento al tema scuro -->
    <style name="Theme.MBI" parent="Theme.Material3.Light.NoActionBar">
        <!-- Colori principali -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/text_dark_gray</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="colorBackground">@color/white</item>
        <!-- Altri stili -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/text_dark_gray</item>
        <item name="searchInputBackground">@drawable/elegant_search_background_light</item>
    </style>

    <style name="Theme.MBI.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colori scuri -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_700</item>

        <!-- Colori primari e altri attributi -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/text_light_gray</item>
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="colorBackground">@color/black</item>
        <!-- Altri stili -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="searchInputBackground">@drawable/elegant_search_background_dark</item>
    </style>
</resources>